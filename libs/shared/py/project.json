{
  "name": "shared-python",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "root": "libs/shared/py",
  "sourceRoot": "libs/shared/py",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uvx ruff check .",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uvx ruff format .",
        "cwd": "{projectRoot}"
      }
    }
  }
}
