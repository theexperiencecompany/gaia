{
  "name": "bot-discord",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "root": "apps/bots/discord",
  "sourceRoot": "apps/bots/discord/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsx watch src/index.ts",
        "cwd": "{projectRoot}"
      }
    },
    "deploy-commands": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsx src/deploy-commands.ts",
        "cwd": "{projectRoot}"
      }
    }
  }
}
