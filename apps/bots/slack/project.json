{
  "name": "bot-slack",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "root": "apps/bots/slack",
  "sourceRoot": "apps/bots/slack/src",
  "projectType": "application",
  "release": {
    "docker": {
      "repositoryName": "theexperiencecompany/gaia-bot-slack"
    }
  },
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsx watch src/index.ts",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm biome check src/",
        "cwd": "{projectRoot}"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm biome check --write src/",
        "cwd": "{projectRoot}"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm biome format --write src/",
        "cwd": "{projectRoot}"
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm biome format src/",
        "cwd": "{projectRoot}"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc --noEmit",
        "cwd": "{projectRoot}"
      }
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/bots/slack/Dockerfile -t apps-bots-slack -t bot-slack -t ghcr.io/theexperiencecompany/gaia-bot-slack:latest .",
        "cwd": "."
      },
      "cache": true,
      "inputs": ["production", "^production"]
    }
  }
}
