{
  "name": "voice-agent",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "root": "apps/voice-agent",
  "sourceRoot": "apps/voice-agent",
  "implicitDependencies": ["api"],
  "release": {
    "docker": {
      "repositoryName": "heygaia/gaia-voice-agent"
    }
  },
  "targets": {
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f Dockerfile.voice-agent -t ghcr.io/heygaia/gaia-voice-agent:latest .",
        "cwd": "apps/api"
      },
      "cache": true,
      "inputs": ["production", "^production"]
    }
  }
}
