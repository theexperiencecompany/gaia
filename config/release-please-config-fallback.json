{
  "separate-pull-requests": false,
  "include-component-in-tag": false,
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "gaia",
      "components": ["api", "web", "desktop"],
      "merge": true
    }
  ],
  "packages": {
    "apps/api": {
      "release-type": "python",
      "component": "api",
      "changelog-path": "CHANGELOG.md"
    },
    "apps/web": {
      "release-type": "node",
      "component": "web",
      "changelog-path": "CHANGELOG.md"
    },
    "apps/desktop": {
      "release-type": "node",
      "component": "desktop",
      "changelog-path": "CHANGELOG.md"
    }
  }
}
