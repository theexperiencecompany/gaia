{
  "name": "@heygaia/cli",
  "version": "0.2.0",
  "description": "CLI tool for setting up and managing GAIA",
  "type": "module",
  "bin": {
    "gaia": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --packages=external --outfile=dist/index.js --minify && chmod +x dist/index.js",
    "start": "NODE_ENV=production node dist/index.js",
    "type-check": "tsc --noEmit",
    "check": "biome check src",
    "fix": "biome check --write src",
    "lint": "pnpm run check",
    "lint:fix": "pnpm run fix",
    "format": "biome format --write src",
    "prepublishOnly": "pnpm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heygaia/gaia.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "gaia",
    "cli",
    "ai-assistant",
    "setup"
  ],
  "license": "MIT",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "commander": "^14.0.3",
    "execa": "^9.6.1",
    "ink": "^6.6.0",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-image": "^2.0.0",
    "ink-progress-bar": "^3.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19",
    "react-dom": "^19",
    "remove": "^0.1.5",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@types/node": "^25.2.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "esbuild": "latest",
    "tsx": "latest",
    "typescript": "^5.9.2"
  }
}
