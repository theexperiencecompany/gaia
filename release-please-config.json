{
  "separate-pull-requests": false,
  "include-component-in-tag": false,
  "group-pull-request-title-pattern": "release: v${version}",
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "gaia",
      "components": ["backend", "frontend"],
      "merge": true
    }
  ],
  "packages": {
    "backend": {
      "release-type": "python",
      "component": "backend",
      "changelog-path": "CHANGELOG.md"
    },
    "frontend": {
      "release-type": "node",
      "component": "frontend",
      "changelog-path": "CHANGELOG.md"
    }
  }
}
