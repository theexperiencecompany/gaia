          },
          {
            "group": "Extra Developer Docs",
            "pages": [
              "developers/extra/add-tools",
              "developers/extra/release-workflow",
              "developers/extra/add-env-vars",
              "developers/extra/lazy-loading"
            ]
          }
        ]
      },
      {
        "tab": "Guides",
        "icon": "book-open",
        "groups": [
          {
            "group": "Guides",
            "pages": ["guides/create-public-workflow"]
          }
        ]
